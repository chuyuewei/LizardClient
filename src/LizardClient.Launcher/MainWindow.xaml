<Window x:Class="LizardClient.Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="LizardClient" 
        Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource Brush.Background.Main}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>

        <!-- 顶部导航栏 -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Logo -->
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="25,0">
                <Border Width="36" Height="36" CornerRadius="8" Background="{StaticResource Brush.Gradient.Primary}" Margin="0,0,12,0">
                    <Path Data="{StaticResource Icon.Play}" Fill="White" Width="14" Height="14" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="2,0,0,0"/>
                </Border>
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="LIZARD" FontSize="18" FontWeight="Bold" Foreground="White" />
                    <TextBlock Text="CLIENT" FontSize="10" FontWeight="Bold" Foreground="{StaticResource Brush.Primary}" />
                </StackPanel>
            </StackPanel>

            <!-- 导航菜单 -->
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                <RadioButton Content="主页" Tag="{StaticResource Icon.Home}" Style="{StaticResource Style.Button.Nav}" IsChecked="True" Click="NavigateHome"/>
                <RadioButton Content="账户" Tag="{StaticResource Icon.User}" Style="{StaticResource Style.Button.Nav}" Click="NavigateAccount"/>
                <RadioButton Content="下载" Tag="{StaticResource Icon.Dashboard}" Style="{StaticResource Style.Button.Nav}" Click="NavigateDownload"/>
                <RadioButton Content="模组" Tag="{StaticResource Icon.Mods}" Style="{StaticResource Style.Button.Nav}" Click="NavigateMods"/>
                <RadioButton Content="设置" Tag="{StaticResource Icon.Settings}" Style="{StaticResource Style.Button.Nav}" Click="NavigateSettings"/>
            </StackPanel>

            <!-- 用户信息 -->
            <Border Grid.Column="2" Margin="25,0" Background="#1AFFFFFF" CornerRadius="20" Padding="12,6">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Width="24" Height="24" Fill="#FF3F3F46" Margin="0,0,8,0"/>
                    <TextBlock Text="Player123" FontSize="13" FontWeight="SemiBold" Foreground="White" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 内容区域 -->
        <Grid Grid.Row="1" Margin="25,10">
            <!-- 主页视图 -->
            <Grid x:Name="HomeView">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>

                <!-- 左侧：主要内容 -->
                <StackPanel Grid.Column="0" Margin="0,0,20,0">
                    <!-- 欢迎 Banner -->
                    <Border Height="200" CornerRadius="16" Margin="0,0,0,20">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Color="#FF1E293B" Offset="0"/>
                                <GradientStop Color="#FF0F172A" Offset="1"/>
                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Path Data="M0,100 C150,200 350,0 500,100 S800,0 1000,100" Stroke="#1AFFFFFF" StrokeThickness="2" Stretch="Fill" VerticalAlignment="Bottom" Height="100"/>
                            <StackPanel VerticalAlignment="Center" Margin="40,0">
                                <TextBlock Text="准备好战斗了吗？" FontSize="32" FontWeight="Bold" Foreground="White" Margin="0,0,0,10"/>
                                <TextBlock Text="LizardClient v1.0.0 现已发布，带来极致性能体验。" FontSize="16" Foreground="{StaticResource Brush.Text.Secondary}"/>
                            </StackPanel>
                        </Grid>
                    </Border>

                    <!-- 功能网格 -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Border Grid.Column="0" Style="{StaticResource Style.Card}" Margin="0,0,10,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <Path Data="{StaticResource Icon.Mods}" Fill="{StaticResource Brush.Accent}" Width="20" Height="20" Stretch="Uniform"/>
                                    <TextBlock Text="模组系统" FontSize="16" FontWeight="Bold" Foreground="White" Margin="10,0,0,0"/>
                                </StackPanel>
                                <TextBlock Text="内置 75+ 个 PvP 和实用模组，无需繁琐安装。支持 Forge, Fabric, NeoForge。" Foreground="{StaticResource Brush.Text.Secondary}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>

                        <Border Grid.Column="1" Style="{StaticResource Style.Card}" Margin="10,0,0,0">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                    <Path Data="{StaticResource Icon.Dashboard}" Fill="{StaticResource Brush.Primary}" Width="20" Height="20" Stretch="Uniform"/>
                                    <TextBlock Text="性能优化" FontSize="16" FontWeight="Bold" Foreground="White" Margin="10,0,0,0"/>
                                </StackPanel>
                                <TextBlock Text="独家 FPS 提升技术，内存优化算法，让游戏运行如丝般顺滑。" Foreground="{StaticResource Brush.Text.Secondary}" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- 右侧：侧边栏 -->
                <StackPanel Grid.Column="1">
                    <!-- 启动配置 -->
                    <Border Style="{StaticResource Style.Card}">
                        <StackPanel>
                            <TextBlock Text="启动配置" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Muted}" Margin="0,0,0,15"/>
                            
                            <TextBlock Text="Minecraft 版本" FontSize="12" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,0,0,5"/>
                            <ComboBox x:Name="VersionComboBox" SelectedIndex="0" Margin="0,0,0,15" Padding="8">
                                <ComboBoxItem Content="1.8.9 (PvP 优化版)"/>
                                <ComboBoxItem Content="1.12.2 (模组版)"/>
                                <ComboBoxItem Content="1.20.4 (最新版)"/>
                                <ComboBoxItem Content="1.21.0 (实验性)"/>
                            </ComboBox>

                            <TextBlock Text="内存分配" FontSize="12" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,0,0,5"/>
                            <Grid Margin="0,0,0,5">
                                <ProgressBar Value="60" Height="4" Background="#33FFFFFF" Foreground="{StaticResource Brush.Primary}" BorderThickness="0"/>
                            </Grid>
                            <TextBlock Text="4096 MB" FontSize="12" Foreground="White" HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>

                    <!-- 快速链接 -->
                    <Border Style="{StaticResource Style.Card}">
                        <StackPanel>
                            <TextBlock Text="社区" FontSize="14" FontWeight="Bold" Foreground="{StaticResource Brush.Text.Muted}" Margin="0,0,0,15"/>
                            <TextBlock Text="• 加入 Discord 服务器" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,5" Cursor="Hand"/>
                            <TextBlock Text="• 访问官方网站" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,5" Cursor="Hand"/>
                            <TextBlock Text="• 提交 Bug 报告" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,5" Cursor="Hand"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>

            <!-- 模组视图容器 -->
            <ContentControl x:Name="ModsContainer" Visibility="Collapsed"/>
            
            <!-- 设置视图容器 -->
            <ContentControl x:Name="SettingsContainer" Visibility="Collapsed"/>
            
            <!-- 下载视图容器 -->
            <ContentControl x:Name="DownloadContainer" Visibility="Collapsed"/>
            
            <!-- 账户视图容器 -->
            <ContentControl x:Name="AccountContainer" Visibility="Collapsed"/>
        </Grid>

        <!-- 底部控制栏 -->
        <Border Grid.Row="2" Background="#0DFFFFFF" BorderBrush="#1AFFFFFF" BorderThickness="0,1,0,0">
            <Grid Margin="30,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                        <Ellipse Width="8" Height="8" Fill="#FF10B981"/>
                        <TextBlock Text="系统就绪" FontSize="14" FontWeight="SemiBold" Foreground="White" Margin="8,0,0,0"/>
                    </StackPanel>
                    <TextBlock Text="已加载配置: Default Profile (1.8.9)" FontSize="12" Foreground="{StaticResource Brush.Text.Secondary}"/>
                </StackPanel>

                <Button Grid.Column="1" Content="启动游戏" Style="{StaticResource Style.Button.Primary}" Width="200" Click="LaunchGame">
                    <Button.ContentTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Path Data="{StaticResource Icon.Play}" Fill="White" Width="12" Height="12" Stretch="Uniform" Margin="0,0,10,0"/>
                                <TextBlock Text="{Binding}" VerticalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </Button.ContentTemplate>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
