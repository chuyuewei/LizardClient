<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 颜色调色板 -->
    <Color x:Key="Color.Background.Main">#FF18181B</Color>      <!-- 深色背景 (Zinc-950) -->
    <Color x:Key="Color.Background.Card">#FF27272A</Color>      <!-- 卡片背景 (Zinc-800) -->
    <Color x:Key="Color.Background.Card.Hover">#FF3F3F46</Color> <!-- 卡片悬停 (Zinc-700) -->
    
    <Color x:Key="Color.Primary">#FF3B82F6</Color>              <!-- 主色调 (Blue-500) -->
    <Color x:Key="Color.Primary.Hover">#FF2563EB</Color>        <!-- 主色调悬停 (Blue-600) -->
    <Color x:Key="Color.Accent">#FF06B6D4</Color>               <!-- 强调色 (Cyan-500) -->
    
    <Color x:Key="Color.Text.Primary">#FFFFFFFF</Color>
    <Color x:Key="Color.Text.Secondary">#FFA1A1AA</Color>       <!-- Zinc-400 -->
    <Color x:Key="Color.Text.Muted">#FF71717A</Color>           <!-- Zinc-500 -->

    <SolidColorBrush x:Key="Brush.Background.Main" Color="{StaticResource Color.Background.Main}"/>
    <SolidColorBrush x:Key="Brush.Background.Card" Color="{StaticResource Color.Background.Card}"/>
    <SolidColorBrush x:Key="Brush.Primary" Color="{StaticResource Color.Primary}"/>
    <SolidColorBrush x:Key="Brush.Text.Primary" Color="{StaticResource Color.Text.Primary}"/>
    <SolidColorBrush x:Key="Brush.Text.Secondary" Color="{StaticResource Color.Text.Secondary}"/>

    <!-- 渐变画笔 -->
    <LinearGradientBrush x:Key="Brush.Gradient.Primary" StartPoint="0,0" EndPoint="1,1">
        <GradientStop Color="#FF3B82F6" Offset="0"/>
        <GradientStop Color="#FF06B6D4" Offset="1"/>
    </LinearGradientBrush>

