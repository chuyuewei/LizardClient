<Page x:Class="LizardClient.Launcher.Views.DownloadPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="Transparent">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 顶部搜索和筛选栏 -->
        <Border Grid.Row="0" Background="#0D000000" BorderBrush="#1AFFFFFF" BorderThickness="0,0,0,1" Padding="30,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="下载中心" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>

                <!-- 分类和搜索 -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- 分类选择 -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="0,0,20,0">
                        <RadioButton x:Name="MinecraftTab" Content="Minecraft" GroupName="Category" 
                                   IsChecked="True" Style="{StaticResource Style.RadioButton.Tab}" 
                                   Command="{Binding CategoryChangedCommand}" CommandParameter="MinecraftVersion"
                                   Margin="0,0,10,0"/>
                        <RadioButton x:Name="ModLoaderTab" Content="Mod 加载器" GroupName="Category" 
                                   Style="{StaticResource Style.RadioButton.Tab}" 
                                   Command="{Binding CategoryChangedCommand}" CommandParameter="ModLoader"
                                   Margin="0,0,10,0"/>
                        <RadioButton x:Name="ModsTab" Content="Mods" GroupName="Category" 
                                   Style="{StaticResource Style.RadioButton.Tab}" 
                                   Command="{Binding CategoryChangedCommand}" CommandParameter="Mod"/>
                    </StackPanel>

                    <!-- Minecraft 版本选择 -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0">
                        <TextBlock Text="MC 版本:" Foreground="{StaticResource Brush.Text.Secondary}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <ComboBox ItemsSource="{Binding MinecraftVersions}" 
                                SelectedItem="{Binding SelectedMinecraftVersion}"
                                Width="150"/>
                    </StackPanel>

                    <!-- 搜索框 -->
                    <Grid Grid.Column="2">
                        <TextBox Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}" 
                               Padding="10,8" FontSize="14"/>
                        <TextBlock Text="搜索..." Foreground="{StaticResource Brush.Text.Secondary}" 
                                 Margin="15,0,0,0" VerticalAlignment="Center" IsHitTestVisible="False">
                            <TextBlock.Style>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding SearchQuery}" Value="">
                                            <Setter Property="Visibility" Value="Visible"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </TextBlock.Style>
                        </TextBlock>
                    </Grid>

                    <Button Grid.Column="3" Content="搜索" Command="{Binding SearchCommand}" 
                          Padding="25,8" Margin="10,0,0,0"/>
                </Grid>
            </Grid>
        </Border>

        <!-- 主内容区 - 项目列表 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding AvailableItems}" Margin="30,20">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#0D000000" BorderBrush="#1AFFFFFF" BorderThickness="1" 
                              CornerRadius="8" Padding="20" Margin="0,0,20,20" Width="350"
                              Cursor="Hand">
                            <Border.InputBindings>
                                <MouseBinding MouseAction="LeftClick" 
                                            Command="{Binding DataContext.DownloadCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                            CommandParameter="{Binding}"/>
                            </Border.InputBindings>
                            
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- 标题 -->
                                <TextBlock Grid.Row="0" Text="{Binding Name}" FontSize="18" FontWeight="Bold" 
                                         Foreground="White" TextWrapping="Wrap" Margin="0,0,0,10"/>

                                <!-- 版本和作者 -->
                                <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,8">
                                    <TextBlock Text="{Binding Version}" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,0,10,0"/>
                                    <TextBlock Text="{Binding Author}" Foreground="{StaticResource Brush.Text.Secondary}">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Visibility" Value="Visible"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Author}" Value="">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>

                                <!-- 描述 -->
                                <TextBlock Grid.Row="2" Text="{Binding Description}" 
                                         Foreground="{StaticResource Brush.Text.Secondary}" 
                                         TextWrapping="Wrap" Margin="0,0,0,10" MaxHeight="60"/>

                                <!-- 底部信息 -->
                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock Foreground="{StaticResource Brush.Text.Secondary}">
                                            <Run Text="大小: "/>
                                            <Run Text="{Binding FileSize, Converter={StaticResource FileSizeConverter}}"/>
                                        </TextBlock>
                                        <TextBlock Text="|" Foreground="{StaticResource Brush.Text.Secondary}" Margin="10,0"/>
                                        <TextBlock Foreground="{StaticResource Brush.Text.Secondary}">
                                            <Run Text="下载: "/>
                                            <Run Text="{Binding Downloads}"/>
                                        </TextBlock>
                                    </StackPanel>

                                    <Border Grid.Column="1" Background="#FF4CAF50" CornerRadius="4" Padding="8,4">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsInstalled}" Value="True">
                                                        <Setter Property="Visibility" Value="Visible"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <TextBlock Text="已安装" Foreground="White" FontSize="12"/>
                                    </Border>
                                </Grid>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- 底部下载进度 -->
        <Border Grid.Row="2" Background="#0D000000" BorderBrush="#1AFFFFFF" BorderThickness="0,1,0,0" Padding="30,15">
            <Border.Style>
                <Style TargetType="Border">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsDownloading}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Border.Style>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="{Binding CurrentProgress.ItemName}" 
                             FontSize="14" Foreground="White" FontWeight="SemiBold"/>
                    <Button Grid.Column="1" Content="取消" Command="{Binding CancelDownloadCommand}" 
                          Padding="15,5" Background="#40FF0000"/>
                </Grid>

                <ProgressBar Grid.Row="1" Value="{Binding CurrentProgress.ProgressPercentage}" 
                           Maximum="100" Height="8" Margin="0,10,0,8"/>

                <Grid Grid.Row="2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Foreground="{StaticResource Brush.Text.Secondary}">
                        <Run Text="{Binding CurrentProgress.ProgressPercentage, StringFormat={}{0:F1}%}"/>
                    </TextBlock>

                    <TextBlock Grid.Column="2" Foreground="{StaticResource Brush.Text.Secondary}">
                        <Run Text="{Binding CurrentProgress.DownloadSpeed, StringFormat={}{0:F1}}"/>
                        <Run Text="KB/s"/>
                    </TextBlock>
                </Grid>
            </Grid>
        </Border>
    </Grid>
</Page>
