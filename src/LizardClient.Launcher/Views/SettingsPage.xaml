<Page x:Class="LizardClient.Launcher.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d"
      Background="Transparent">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 左侧导航栏 -->
        <Border Grid.Column="0" Background="#0D000000" BorderBrush="#1AFFFFFF" BorderThickness="0,0,1,0" Padding="20">
            <StackPanel>
                <TextBlock Text="设置" FontSize="24" FontWeight="Bold" Foreground="White" Margin="0,0,0,30"/>
                
                <Button x:Name="GeneralTab" Content="常规" Style="{StaticResource Style.Button.Nav}" Click="ShowGeneralSettings" Margin="0,5"/>
                <Button x:Name="PerformanceTab" Content="性能" Style="{StaticResource Style.Button.Nav}" Click="ShowPerformanceSettings" Margin="0,5"/>
                <Button x:Name="GameTab" Content="游戏" Style="{StaticResource Style.Button.Nav}" Click="ShowGameSettings" Margin="0,5"/>
                <Button x:Name="PreferencesTab" Content="偏好" Style="{StaticResource Style.Button.Nav}" Click="ShowPreferencesSettings" Margin="0,5"/>
            </StackPanel>
        </Border>

        <!-- 右侧内容区 -->
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="40,20">
                
                <!-- 常规设置面板 -->
                <StackPanel x:Name="GeneralPanel" Visibility="Visible">
                    <TextBlock Text="常规设置" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
                    
                    <TextBlock Text="语言" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,10,0,5"/>
                    <ComboBox SelectedItem="{Binding Language, Mode=TwoWay}" Margin="0,0,0,15">
                        <ComboBoxItem Content="简体中文" Tag="zh-CN"/>
                        <ComboBoxItem Content="English" Tag="en-US"/>
                    </ComboBox>

                    <TextBlock Text="主题" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,10,0,5"/>
                    <ComboBox SelectedItem="{Binding Theme, Mode=TwoWay}" Margin="0,0,0,15">
                        <ComboBoxItem Content="Dark" Tag="Dark"/>
                        <ComboBoxItem Content="Light" Tag="Light"/>
                    </ComboBox>

                    <CheckBox Content="启用自动更新" IsChecked="{Binding EnableAutoUpdate}" Foreground="White" Margin="0,10"/>
                    <CheckBox Content="启用硬件加速" IsChecked="{Binding EnableHardwareAcceleration}" Foreground="White" Margin="0,5"/>
                </StackPanel>

                <!-- 性能设置面板 -->
                <StackPanel x:Name="PerformancePanel" Visibility="Collapsed">
                    <TextBlock Text="性能设置" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
                    
                    <TextBlock Text="FPS 提升等级" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,10,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider Value="{Binding FpsBoostLevel}" Minimum="0" Maximum="3" Width="300" TickFrequency="1" IsSnapToTickEnabled="True"/>
                        <TextBlock Text="{Binding FpsBoostLevel}" Foreground="White" Margin="10,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <TextBlock Text="内存优化等级" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,20,0,5"/>
                    <StackPanel Orientation="Horizontal">
                        <Slider Value="{Binding MemoryOptimizationLevel}" Minimum="0" Maximum="3" Width="300" TickFrequency="1" IsSnapToTickEnabled="True"/>
                        <TextBlock Text="{Binding MemoryOptimizationLevel}" Foreground="White" Margin="10,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <CheckBox Content="启用快速加载" IsChecked="{Binding EnableFastLoading}" Foreground="White" Margin="0,20"/>

                    <TextBlock Text="最大内存分配 (MB)" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,20,0,5"/>
                    <TextBox Text="{Binding MaxMemoryMB}" Width="300" HorizontalAlignment="Left"/>
                </StackPanel>

                <!-- 游戏设置面板 -->
                <StackPanel x:Name="GamePanel" Visibility="Collapsed">
                    <TextBlock Text="游戏设置" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
                    
                    <TextBlock Text="Java 路径" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,10,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding JavaPath}" Margin="0,0,10,0"/>
                        <Button Grid.Column="1" Content="浏览..." Command="{Binding BrowseJavaPathCommand}" Padding="15,8"/>
                    </Grid>

                    <TextBlock Text="游戏目录" Foreground="{StaticResource Brush.Text.Secondary}" Margin="0,20,0,5"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" Text="{Binding GameRootDirectory}" Margin="0,0,10,0"/>
                        <Button Grid.Column="1" Content="浏览..." Command="{Binding BrowseGameDirectoryCommand}" Padding="15,8"/>
                    </Grid>
                </StackPanel>

                <!-- 偏好设置面板 -->
                <StackPanel x:Name="PreferencesPanel" Visibility="Collapsed">
                    <TextBlock Text="偏好设置" FontSize="20" FontWeight="Bold" Foreground="White" Margin="0,0,0,20"/>
                    
                    <CheckBox Content="最小化到托盘" IsChecked="{Binding MinimizeToTray}" Foreground="White" Margin="0,10"/>
                    <CheckBox Content="随系统启动" IsChecked="{Binding StartWithSystem}" Foreground="White" Margin="0,5"/>
                    <CheckBox Content="游戏启动后关闭启动器" IsChecked="{Binding CloseAfterGameLaunch}" Foreground="White" Margin="0,5"/>
                </StackPanel>

                <!-- 底部按钮 -->
                <StackPanel Orientation="Horizontal" Margin="0,40,0,20">
                    <Button Content="保存设置" Command="{Binding SaveCommand}" Padding="30,10" Margin="0,0,10,0"/>
                    <Button Content="重置为默认" Command="{Binding ResetCommand}" Padding="30,10" Background="#40FF0000"/>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
